{
  "name": "fullstack-test-automation",
  "version": "1.0.0",
  "description": "Comprehensive test automation framework for web, API, and performance testing with CI/CD",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:web && npm run test:api && npm run test:performance",
    "test:web": "playwright test",
    "test:api": "jest --config=jest.api.config.js",
    "test:performance": "k6 run tests/performance/*.js",
    "test:web:headed": "playwright test --headed",
    "test:web:debug": "playwright test --debug",
    "test:web:ui": "playwright test --ui",
    "test:api:watch": "jest --config=jest.api.config.js --watch",
    "test:coverage": "jest --config=jest.api.config.js --coverage",
    "report": "allure serve allure-results",
    "report:generate": "allure generate allure-results --clean -o allure-report",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "generate-test-data": "node scripts/generate-test-data.js",
    "docker:build": "docker build -t test-automation .",
    "docker:run": "docker run --rm -v ${PWD}/allure-results:/app/allure-results test-automation",
    "setup": "npm install && npx playwright install && npx playwright install-deps"
  },
  "keywords": [
    "test-automation",
    "playwright",
    "jest",
    "k6",
    "api-testing",
    "performance-testing",
    "ci-cd"
  ],
  "author": "Test Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "allure-commandline": "^2.24.0",
    "allure-playwright": "^2.10.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-allure-reporter": "^0.1.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "@faker-js/faker": "^8.4.1",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "supertest": "^6.3.3",
    "express": "^4.18.2"
  }
}
